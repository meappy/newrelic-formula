                Configure NPI utility:
                    cmd.run:
                        - name: /opt/newrelic-npi/npi config set proxy_host 10.69.0.200
                        - onchanges:
                            - cmd: Install NPI plugin

                Install NPI plugin:
                    cmd.run:
                        - name: /opt/newrelic-npi/npi install com.newrelic.plugins.mysql.instance -ny
                        - onchanges:
                            - cmd: Install NPI utility

                Start NPI plugin:
                    cmd.run:
                        - name: /opt/newrelic-npi/npi
                        - onchanges:
                            - cmd: Install NPI plugin

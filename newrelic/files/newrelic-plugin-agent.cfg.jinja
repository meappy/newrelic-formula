{% from 'newrelic/map.jinja' import newrelic with context %}
{%- set p = newrelic.plugin.source.meetme.name -%}
%YAML 1.2
---

#
# **** Managed by SaltStack ****
# ****     DO NOT EDIT      ****
#

Application:
  license_key: {{ newrelic.nrsysmond.license_key }}
  wake_interval: 60
  {% for key in p.keys() %}
  {{ key }}:
    {% for key,value in p[key].items() -%}
        {{ key }}: {{ value }} 
    {% endfor -%}
  {% endfor %}
Daemon:
  user: newrelic
  pidfile: /var/run/newrelic/newrelic-plugin-agent.pid

Logging:
  formatters:
    verbose:
      format: '%(levelname) -10s %(asctime)s %(process)-6d %(processName) -15s %(threadName)-10s %(name) -45s %(funcName) -25s L%(lineno)-6d: %(message)s'
  handlers:
    file:
      class : logging.handlers.RotatingFileHandler
      formatter: verbose
      filename: /var/log/newrelic/newrelic-plugin-agent.log
      maxBytes: 10485760
      backupCount: 3
  loggers:
    newrelic_plugin_agent:
      level: INFO
      propagate: True
      handlers: [console, file]
    requests:
      level: ERROR
      propagate: True
      handlers: [console, file]

